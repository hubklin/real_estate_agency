<%= form_with(model: post, class: "mt-4") do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1><%= yield(:form_title) %></h1>

  <div class="mb-3">
    <%= form.label "Tytuł", class: "form-label", style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label "Miejscowość:", class: "form-label", style: "display: block" %>
    <%= form.text_field :miejscowosc, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label "Adres:", class: "form-label", style: "display: block" %>
    <%= form.text_field :adres, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label "Rodzaj budynku:", class: "form-label", style: "display: block" %>
    <%= form.select :budynek, ['Mieszkanie', 'Dom jednorodzinny', 'Kamienica', 'Szeregówka', 'Bliźniak'], { prompt: 'Wybierz rodzaj budynku' }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label "Rodzaj oferty:", class: "form-label", style: "display: block" %>
    <%= form.select :oferta, ['Sprzedaż', 'Wynajem'], { prompt: 'Wybierz rodzaj oferty' }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label "Metraż:", class: "form-label", style: "display: block" %>
    <%= form.number_field :metry, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label "Cena:", class: "form-label", style: "display: block" %>
    <%= form.number_field :cena, step: 0.01, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label "Numer kontaktowy:", class: "form-label", style: "display: block" %>
    <%= form.text_field :telefon, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label "Opis nieruchomości:", class: "form-label", style: "display: block" %>
    <%= form.text_area :opis, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label "Zdjęcia:", class: "form-label", style: "display: block" %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.submit yield(:form_submit_text), class: "btn btn-primary" %>
  </div>      
<% end %>
